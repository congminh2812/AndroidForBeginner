<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tutorials.Item.Introduction_Child.StackActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_stack"
        android:layout_width="match_parent"
        android:background="@color/colorGreenLight"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverLay"/>
    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/bg_line_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/row_one_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Row One"
            />
        <ImageView
            android:layout_below="@id/toolbar_symbol"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:src="@drawable/image_software_stack"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/bg_line_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/row_two_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Row Two"
            />
        <ImageView
            android:layout_below="@id/toolbar_symbol"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/image_system_operating"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/row_two_text_view_2"
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="Row Two 2"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/bg_line_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/row_three_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Row Three"
            />

    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/bg_line_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/row_four_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="Row Four"
            />

    </LinearLayout>

</LinearLayout>
</ScrollView>