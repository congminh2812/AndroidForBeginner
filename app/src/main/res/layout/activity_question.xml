<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz.QuestionActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorGreenLight"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverLay">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:background="@color/colorGreenLight"
        android:weightSum="10"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="8"
            android:id="@+id/txt_questionNumber"
            android:text="1/10"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Chronometer
            android:layout_weight="2"
            android:id="@+id/chronometer"
            android:countDown="true"
            android:textColor="#000"
            android:textSize="22sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:text="Question"
        android:textColor="#000"
        android:id="@+id/txt_question"
        android:layout_weight="4"
        android:padding="5dp"
        android:textSize="30sp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_answerA"
        android:text="A"
        android:textSize="22sp"
        android:layout_marginBottom="5dp"
        android:textColor="#000"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_stroke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_answerB"
        android:text="B"
        android:textSize="22sp"
        android:layout_margin="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_stroke"
        android:textColor="#000"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="C"
        android:id="@+id/txt_answerC"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_stroke"
        android:textColor="#000"
        android:layout_marginBottom="5dp"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txt_answerD"
        android:layout_margin="10dp"
        android:text="D"
        android:background="@drawable/bg_stroke"
        android:padding="5dp"
        android:textSize="22sp"
        android:textColor="#000"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:background="@color/colorGreenLight"
        app:itemTextColor="#fff"
        app:itemIconTint="#fff"
        app:menu="@menu/bottom_navigation_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.design.widget.BottomNavigationView>
</LinearLayout>
