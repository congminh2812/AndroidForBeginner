<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".Tutorials.Item.Structure_Child.StructureChildActivity">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_structure"
            android:layout_width="match_parent"
            android:background="@color/colorGreenLight"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppTheme.AppBarOverLay"/>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/row_one_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Row One"
                android:textSize="16sp"
                />
            <ImageView
                android:src="@drawable/image_structure1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/row_one_text_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Row One"
                android:textSize="16sp"
                android:textColor="#000"
                />
            <ImageView
                android:src="@drawable/image_structure2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
