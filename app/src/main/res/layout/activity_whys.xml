<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tutorials.Item.Introduction_Child.WhysActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_why"
        android:layout_width="match_parent"
        android:background="@color/colorGreenLight"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverLay"/>
    <LinearLayout
        android:background="@drawable/bg_line_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Why Android ?"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000"
            />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_below="@id/toolbar_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_why_child"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"

            />
    </LinearLayout>

</LinearLayout>